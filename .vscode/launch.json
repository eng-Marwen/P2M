{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "src/index.ts"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    }
  ]
}
